{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ES2021",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "out"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
